{
  "name": "@leighton-digital/lambda-toolkit",
  "version": "1.0.1",
  "license": "MIT",
  "description": "Lambda Toolkit is an open-source collection of utility functions designed to help teams write production-ready application code, for deployment to AWS Lambda, faster",
  "type": "commonjs",
  "author": "leighton digital",
  "homepage": "https://github.com/leighton-digital/lambda-toolkit",
  "keywords": [
    "CDK",
    "AWS CDK",
    "TypeScript",
    "Jest",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leighton-digital/lambda-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/leighton-digital/lambda-toolkit/issues"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "images/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "SECURITY.md",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md"
  ],
  "publishConfig": {
    "tag": "latest",
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "scripts": {
    "build": "rm -f tsconfig.tsbuildinfo && rm -rf ./dist && tsc -p tsconfig.json",
    "commit": "cz",
    "dev:setup": "pnpx lefthook install",
    "docs:ref": "typedoc",
    "docs:post": "node scripts/configure-typedoc.mjs",
    "docs:build": "pnpm --prefix docs-site run build",
    "docs:serve": "pnpm --prefix docs-site run serve",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false .",
    "format:fix": "biome format --write --fix .",
    "format": "biome format --write .",
    "lint": "biome check --linter-enabled=true --formatter-enabled=false .",
    "preinstall": "npx only-allow pnpm",
    "prepack": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@aws-lambda-powertools/logger": "^2.15.0",
    "@aws-lambda-powertools/metrics": "^2.25.0",
    "@aws-lambda-powertools/tracer": "^2.25.0",
    "@biomejs/biome": "^2.2.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/jest": "^0.2.39",
    "@types/aws-lambda": "^8.10.155",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.1",
    "aws-cdk-lib": "^2.219.0",
    "aws-lambda": "^1.0.7",
    "commit-and-tag-version": "^12.5.2",
    "commitizen": "^4.3.1",
    "constructs": "^10.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^30.2.0",
    "lefthook": "^1.13.6",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.13",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@aws-lambda-powertools/logger": "^2.15.0",
    "@aws-lambda-powertools/metrics": "^2.25.0",
    "@aws-lambda-powertools/tracer": "^2.25.0",
    "aws-cdk-lib": "^2.219.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.4.2"
  },
  "dependencies": {
    "@middy/core": "^6.4.1",
    "@middy/http-error-handler": "^6.4.1",
    "http-errors": "^2.0.0",
    "zod": "^4.1.12"
  }
}
